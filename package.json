{
  "name": "bc-pte-deployment",
  "displayName": "BC PTE Deployment",
  "publisher": "jtavares",
  "icon": "media/AppIcon.jpg",
  "description": "Business Central PTE Deployment",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "keywords": [
    "BC",
    "Business Central",
    "Deployment",
    "PTE",
    "Per-Tenant Extension"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bc-pte-deployment.deploy",
        "title": "BC: Publish as PTE (Per-Tenant Extension)"
      }
    ],
    "keybindings": [
      {
        "command": "bc-pte-deployment.deploy",
        "key": "ctrl+alt+f5",
        "mac": "cmd+alt+f5",
        "when": " resourceLangId == al"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == al",
          "command": "bc-pte-deployment.deploy",
          "group": "2_alcommands"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId == al",
          "command": "bc-pte-deployment.deploy",
          "group": "2_alcommands"
        }
      ]
    },
    "debuggers": [
      {
        "type": "al",
        "configurationAttributes": {
          "launch": {
            "properties": {
              "clientID": {
                "type": "string",
                "description": "Client ID for PTE Deployment"
              },
              "clientSecret": {
                "type": "string",
                "description": "Client Secret for PTE Deployment"
              }
            }
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "axios": "^1.8.1"
  }
}